{
  "suggest.triggerAfterInsertEnter": true,
  "suggest.minTriggerInputLength": 3,
  "tsserver.enableJavascript": true,
  "clangd.compilationDatabasePath": "./build",
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "python"
  ],
  "diagnostic-languageserver.linters": {
    "clj_kondo_lint": {
      "command": "clj-kondo",
      "rootPatterns": ["shadow-cljs.edn"],
      "debounce": 100,
      "args": ["--lint", "%filepath"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "clj-kondo",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
        {
          "line": 1,
          "column": 2,
          "message": 4,
          "security": 3
        }
      ],
      "securities": {
        "error": "error",
        "warning": "warning",
        "note": "info"
      }
    }
  },
  "diagnostic-languageserver.filetypes": { "clojure": "clj_kondo_lint" },
  "languageserver": {
    "ocaml": {
      "command": "opam",
      "args": ["config", "exec", "--", "ocamllsp"],
      "filetypes": ["ocaml", "reason"]
    },
    "flow": {
      "enable": false,
      "command": "npx",
      "args": ["flow", "lsp"],
      "filetypes": ["javascript", "javascriptreact", "javascript.jsx"],
      "rootPatterns": [".flowconfig"],
      "requireRootPattern": true
    },
    "kotlin": {
      "command": "kotlin-language-server",
      "filetypes": ["kotlin"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "filetypes": ["haskell", "lhaskell"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml"
      ],
      "initializationOptions": {
        "languageServerHaskell": {}
      }
    },
    "rescript": {
      "enable": true,
      "module": "~/.config/nvim/plugged/vim-rescript/rescript-vscode/extension/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    },
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["graphql"]
    }
  },
  "clangd.path": "/usr/bin/clangd",
  "clangd.arguments": ["--pretty", "--log=verbose"]
}
