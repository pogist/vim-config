{
  "suggest.triggerAfterInsertEnter": true,
  "suggest.minTriggerInputLength": 3,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
         "directory": "/tmp/ccls"
        },
        "clang": {
          "resourceDir": "/Library/Developer/CommandLineTools/usr/lib/clang/11.0.0",
          "extraArgs": [
            "-isystem",
            "/usr/local/Cellar/llvm/9.0.1/include/c++/v1/"
          ]
        }
      }
    },
    "sourcekit-lsp": {
      "command": "~/code/sourcekit-lsp/.build/release/sourcekit-lsp",
      "filetypes": ["c", "cpp", "objc", "objcpp", "swift"]
    },
    "flow": {
      "command": "npx",
      "args": ["flow", "lsp"],
      "filetypes": ["javascript", "javascriptreact", "javascript.jsx"],
      "rootPatterns": [".flowconfig"],
      "requireRootPattern": true
    }
  }
}
